            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="qo'shimcha xona"
            android:textColor="@color/standart_rang"
            android:textSize="@dimen/standartDp"
            app:layout_constraintBottom_toBottomOf="@+id/xonalarSoni"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/xona"
            app:layout_constraintTop_toTopOf="@+id/xonalarSoni" />

        <LinearLayout
            android:id="@+id/lay7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shape_stroke"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/xonalarSoni">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Ijarachilar turi"
