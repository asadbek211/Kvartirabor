                android:textSize="16dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lay8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdb_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Oilaviy"
                    android:textColor="@color/standart_rang"
                    android:textSize="@dimen/standartDp"
                    app:layout_constraintBottom_toTopOf="@+id/rdb_4"
                    app:layout_constraintEnd_toStartOf="@+id/rdb_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton

                    android:id="@+id/rdb_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Student"
                    android:textColor="@color/standart_rang"
                    android:textSize="@dimen/standartDp"
                    app:layout_constraintBottom_toTopOf="@+id/rdb_5"
                    app:layout_constraintEnd_toStartOf="@+id/rdb_3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/rdb_1"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton
                    android:id="@+id/rdb_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="@color/colorPrimary"
                    android:text="O'g'il bola"
                    android:textColor="@color/standart_rang"
                    android:textSize="@dimen/standartDp"
                    app:layout_constraintBottom_toTopOf="@+id/rdb_6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/rdb_2"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton
                    android:id="@+id/rdb_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Ishchi"
                    android:textColor="@color/standart_rang"
                    android:textSize="@dimen/standartDp"
